# Receipts Backend Configuration
# Copy this file to .env and customize for your environment

# Application
APP_NAME="Receipts API"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database
# For development (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./receipts.db
# For production (PostgreSQL)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/receipts
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Security
# IMPORTANT: Generate a new secret key for production
# Run: openssl rand -hex 32
SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Storage
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./uploads
# For S3
# STORAGE_BACKEND=s3
# STORAGE_S3_BUCKET=your-bucket
# STORAGE_S3_REGION=us-east-1
# STORAGE_S3_ACCESS_KEY=your-access-key
# STORAGE_S3_SECRET_KEY=your-secret-key

# Upload limits
MAX_IMAGE_SIZE_MB=50
MAX_VIDEO_SIZE_MB=100

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_AUTH_PER_MINUTE=10
RATE_LIMIT_READ_PER_MINUTE=100
RATE_LIMIT_WRITE_PER_MINUTE=30
RATE_LIMIT_UPLOAD_PER_MINUTE=10
RATE_LIMIT_EXPORT_PER_MINUTE=5

# Redis (optional, for rate limiting in production)
# REDIS_URL=redis://localhost:6379/0

# Export settings
EXPORT_CARD_WIDTH=1200
EXPORT_CARD_QUALITY=90
